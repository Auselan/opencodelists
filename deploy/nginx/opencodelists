upstream opencodelists {
    server unix:/tmp/gunicorn-opencodelists.sock fail_timeout=0;
    keepalive 60;
}

server {
    listen 443 ssl;
    server_name www.opencodelists.org opencodelists.org codelists.opensafely.org;

    ssl_certificate /etc/ssl/opensafely.org.pem;
    ssl_certificate_key /etc/ssl/opensafely.org.key;

    resolver 8.8.8.8 8.8.4.4 valid=300s;
    resolver_timeout 5s;

    client_max_body_size 200M;

    location / {
        access_log /var/log/nginx/opencodelists.access.log;
        error_log /var/log/nginx/opencodelists.error.log;

        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header Host $http_host;

        proxy_pass http://opencodelists;
    }
}
