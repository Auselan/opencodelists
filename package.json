{
  "name": "opencodelists",
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "lint:fix": "eslint \"./assets/src/**/*.{js,jsx}\" --fix",
    "lint": "eslint \"./assets/src/**/*.{js,jsx}\"",
    "serve": "vite preview",
    "test": "jest"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.0",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "babel-loader": "^9.1.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "3.2.4",
    "vite": "^5.0.12"
  },
  "dependencies": {
    "bootstrap": "^5.3.2",
    "react": "^18.2.0",
    "react-bootstrap": "^2.10.0",
    "react-dom": "^18.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/opensafely-core/opencodelists.git"
  },
  "license": "GPL-3.0-or-later",
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "prettier"
    ],
    "globals": {
      "$": "readonly",
      "global": "readonly"
    },
    "overrides": [
      {
        "env": {
          "jest": true
        },
        "files": [
          "**/*.test.js",
          "**/*.test.jsx"
        ]
      }
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "prettier",
      "react"
    ],
    "rules": {
      "prettier/prettier": "error",
      "react/prop-types": "off"
    },
    "settings": {
      "react": {
        "version": "17"
      }
    }
  }
}
